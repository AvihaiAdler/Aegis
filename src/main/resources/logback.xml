<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include
		resource="org/springframework/boot/logging/logback/base.xml" />
	<logger name="org.springframework.web" level="DEBUG" />
  <property name="LOG_ROOT" value="./log" />
  <property name="LOG_FILE_NAME" value="aegis" />

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_ROOT}/${LOG_FILE_NAME}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_ROOT}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <!-- each archived file's size will be max 10MB -->
      <maxFileSize>5MB</maxFileSize>    
      <!-- 30 days to keep -->
      <maxHistory>30</maxHistory>
      <!-- total size of all archive files, if total size > 100GB, it will delete old archived file -->
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%X{shard}] [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="com.howtodoinjava.app" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
  </logger>

  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>
</configuration>